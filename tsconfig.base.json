{
    "extends": "@manuth/tsconfig/recommended",
    "compilerOptions": {
        "declaration": true,
        "module": "Node16",
        "lib": [
            "ES2020"
        ],
        "plugins": [
            {
                "transform": "ts-nameof",
                "type": "raw"
            }
        ],
        "target": "ES6",
        "paths": {
            "comment-json": [
                "./node_modules/@types/comment-json"
            ]
        }
    }
}
